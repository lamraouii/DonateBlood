{% extends 'base.html.twig' %}

{% block title %}Donations{% endblock %}

{% block body %}
    <h1 class="mb-4">Donations</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Donor</th>
            <th>Blood Type</th>
            <th>Quantity</th>
            <th>Center</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.donorEmail }}</td>
                <td>{{ donation.bloodType }}</td>
                <td>{{ donation.quantity }}</td>
                <td>{{ donation.bloodCenter }}</td>
                <td>{{ donation.donatedAt}}</td>
                <td>{{ donation.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No donations found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
