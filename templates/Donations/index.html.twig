{% extends 'base.html.twig' %}

{% block title %}Donations{% endblock %}

{% block body %}
    <h1 class="mb-4">Donations</h1>
    <a href="{{ path('donations_add') }}" class="btn btn-success mt-3">Add Donation</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Donor</th>
            <th>Blood Type</th>
            <th>Quantity</th>
            <th>Center</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.donorEmail }}</td>
                <td>{{ donation.bloodType }}</td>
                <td>{{ donation.quantity }}</td>
                <td>{{ donation.bloodCenter }}</td>
                <td>{{ donation.donatedAt}}</td>
                <td>{{ donation.status }}</td>
                <td class="d-flex gap-2">
                    <a href="{{ path('donations_edit', {'id': donation.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                    <form method="post" action="{{ path('donations_delete', {'id': donation.id}) }}" onsubmit="return confirm('Delete?')" style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donation.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No donations found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
