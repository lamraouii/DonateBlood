{% extends 'base.html.twig' %}

{% block title %}Donors{% endblock %}

{% block body %}
    <h1 class="mb-4">Donors</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>User Email</th>
            <th>Full Name</th>
            <th>Blood Type</th>
            <th>Cine</th>
            <th>Birthdate</th>
        </tr>
        </thead>
        <tbody>
        {% for donor in donors %}
            <tr>
                <td>{{ donor.id }}</td>
                <td>{{ donor.userEmail }}</td>
                <td>{{ donor.fullName}}</td>
                <td>{{ donor.bloodType }}</td>
                <td>{{ donor.cine }}</td>
                <td>
                    {{ donor.birthdate ? donor.birthdate|date('Y-m-d') : '-' }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No donors found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
