{% extends 'base.html.twig' %}

{% block title %}Blood Centers{% endblock %}

{% block body %}
    <h1 class="mb-4">Blood Centers</h1>
    <a href="{{ path('centers_add') }}" class="btn btn-success mt-3">Add Center</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Address</th>
            <th>Phone</th>
            <th>IsActive</th>
        </tr>
        </thead>
        <tbody>
        {% for center in centers %}
            <tr>
                <td>{{ center.id }}</td>
                <td>{{ center.name }}</td>
                <td>{{ center.city }}</td>
                <td>{{ center.address }}</td>
                <td>{{ center.phone }}</td>
                <td>
                    {{ center.isActive? 'Yes' : 'No'  }}
                </td>
                <td class="d-flex gap-2">
                    <a href="{{ path('centers_edit', {'id': center.id}) }}" class="btn btn-secondary btn-sm">Edit</a>

                    <form method="post"
                          action="{{ path('centers_delete', {'id': center.id}) }}"
                          onsubmit="return confirm('Delete this center?')"
                          style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ center.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No blood centers found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
