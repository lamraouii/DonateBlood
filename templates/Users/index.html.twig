{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    <h1 class="mb-4">Users</h1>
    <a href="{{ path('users_new') }}" class="btn btn-primary mt-3 ">Add User</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') }}</td>
                <td  class="d-flex gap-2">
                    <a href="{{ path('users_edit',  {'id': user.id}) }}" class="btn btn-primary ">Edit</a>
                    <form method="post" action="{{ path('users_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                        <button class="btn btn-danger ">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
